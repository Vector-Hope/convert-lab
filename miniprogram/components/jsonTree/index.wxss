/* components/jsonTree/index.wxss */
.json-tree-mask {
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
  padding: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #000;
  opacity: 0.7;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 99;
}

.json-tree-hidden {
  display: none;
}

.close-btn {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  top: 40rpx;
  border-radius: 100%;
  height: 60rpx;
  width: 60rpx;
  color: #e5e5e5;
  font-size: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}