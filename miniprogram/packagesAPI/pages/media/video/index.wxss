/* packagesAPI/pages/media/video/index.wxss */
.video-example-fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  z-index: 10;
}
.video-example-area {
  width: 90%;
  height: 300rpx;
  border: #000 solid 4rpx;
  margin: 10rpx auto;
  padding: 10rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  perspective: 600rpx;
  position: relative;
}
.video-example {
  position: absolute;
  height: 98%;
}

.preview-video {
  height: 95%;
}

.video-example-block {
  width: 100%;
  height: 400rpx;
}
