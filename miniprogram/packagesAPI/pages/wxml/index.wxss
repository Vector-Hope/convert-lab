/* packagesAPI/pages/wxml/index.wxss */
.node-area {
  margin: 10rpx 20rpx;
  padding: 10rpx 20rpx;
  background-color: #fff;
}

.select-node {
  border: 4rpx solid #000;
  border-radius: 10rpx;
  margin: 10rpx;
  padding: 10rpx;
}

.canvas-node {
  height: 100rpx;
  width: 93%;
  border: 4rpx solid #000;
  border-radius: 10rpx;
  margin: 10rpx;
  padding: 10rpx;
  overflow: hidden;
}

.scroll-view-node,
.intersection-observer-node {
  height: 100rpx;
  width: 93%;
  border: 4rpx solid #000;
  border-radius: 10rpx;
  margin: 10rpx;
  padding: 10rpx;
}

.scroll-tag,
.canvas-tag {
  font-weight: bolder;
  width: 100%;
  text-align: center;
  margin: 50rpx 0;
}
