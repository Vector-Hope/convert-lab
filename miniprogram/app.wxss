/**app.wxss**/
@import './style/variables.wxss';

page {
  background-color: var(--color-bg-base);
  height: 100%;
  font-size: 16px;
  line-height: 1.6;
  color: rgba(0, 0, 0, 0.9);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
page > view,
page > scroll-view {
  width: 100vw;
  max-width: 600px;
}
checkbox,
radio {
  margin-right: 0.5px;
  margin-left: 0.5rpx;
  margin-top: 0.9px;
  margin-bottom: 0.3rpx;
}

canvas {
  position: fixed;
  top: 0;
}

.info {
  position: absolute;
  left: 0;
  top: 0;
  width: 100px;
  height: 20px;
  line-height: 20px;
  background-color: rgb(5, 16, 112);
  color: #fff;
  padding-left: 10px;
  font-size: 12px;
  z-index: 1000;
}

.memory {
  top: 20px;
}

.cpu {
  top: 40px;
}

button {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  line-height: 1.2;
}

form {
  width: 100%;
}
input {
  width: 100%;
}

/* lib */
.strong {
  font-weight: bold;
}
.tc {
  text-align: center;
}

/* page */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 16px;
  font-family:
    -apple-system-font,
    Helvetica Neue,
    Helvetica,
    sans-serif;
}
.page-head {
  /* padding: 30px 25px 40px; */
  padding: 30px 25px 40px;
  text-align: center;
}
.page-head-title {
  display: inline-block;
  /* padding: 0 20px 10px 20px;
  font-size: 16px; */
  padding: 0 20px 10px 20px;
  font-size: 16px;
}
.page-head-line {
  margin: 0 auto;
  width: 75px;
  height: 1px;
  background-color: rgba(0, 0, 0, 0.5);
}
.page-head-desc {
  padding-top: 10px;
  color: rgba(0, 0, 0, 0.5);
  font-size: 16px;
}

.page-body {
  width: 100%;
  flex-grow: 1;
}
.page-body-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.page-body-wording {
  text-align: center;
  padding: 100px 50px;
}
.page-body-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100%;
  padding: 25px 0 75px 0;
}
.page-body-title {
  margin-bottom: 50px;
  font-size: 16px;
}
.page-body-text {
  font-size: 15px;
  line-height: 26px;
  color: rgba(0, 0, 0, 0.3);
}
.page-body-text-small {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.9);
  margin-bottom: 50px;
}

.icon-foot {
  width: 76px;
  height: 12px;
  margin: 0 auto;
}

.page-section {
  width: auto;
  margin: 15px;
  padding: 30px 15px;
  background-color: var(--color-bg);
  text-align: center;
  font-size: 14px;
}
.page-section_center {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page-section:last-child {
  margin-bottom: 0;
}
.page-section-gap {
  box-sizing: border-box;
  padding: 0 15px;
}
.page-section-spacing {
  box-sizing: border-box;
  padding: 0 40px;
}
.page-section-title {
  font-size: 14px;
  color: rgba(0, 0, 0, 0.5);
  margin-bottom: 5px;
  padding-left: 15px;
}
.page-section-gap .page-section-title {
  padding-left: 0;
  padding-right: 0;
}

/* widget */
.btn-area {
  margin-top: 30px;
  box-sizing: border-box;
  width: 100%;
  padding: 0 15px;
}

.image-plus {
  width: 75px;
  height: 75px;
  border: 1px solid rgba(0, 0, 0, 0.5);
  position: relative;
}
.image-plus-nb {
  border: 0;
}
.image-plus-text {
  color: rgba(0, 0, 0, 0.3);
  font-size: 14px;
}
/* pick from weui */
.cells_title {
  margin-bottom: 30rpx;
  padding-left: 16px;
  padding-right: 16px;
  color: rgba(0, 0, 0, 0.5);
  font-size: 32rpx;
  line-height: 1.4;
}

/* skyline 未生效，用 .weui-cells_after-title 代替 */
.cells_title + .cells {
  margin-top: 0;
}
.cells {
  margin-top: 8px;
  line-height: 1.41176471;
  font-size: 17px;
  overflow: hidden;
  position: relative;
  border-top: 0.5px solid rgba(0, 0, 0, 0.1);
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
}
.cells_after-title {
  margin-top: 0;
}
.page-section {
  width: auto;
  margin: 30rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  text-align: center;
  font-size: 14px;
}
.cell {
  padding: 16px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.cell-input {
  margin: 0 20rpx;
  border: #9a9a9a solid 4rpx;
  border-radius: 10rpx;
}
.cell_bd {
  flex: 1;
}
.cell_before {
  left: 16px;
  border-top: 0.5px solid rgba(0, 0, 0, 0.1);
}
.cell::before {
  display: none;
}

.center {
  align-items: center;
  justify-content: center;
}

grid-title {
  align-items: center;
  justify-content: center;
  overflow: hidden;
}
